<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kingsley.www.runsong"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="kingsley.www.runsong.application.MusicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="kingsley.www.runsong.activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="kingsley.www.runsong.activity.MainActivity" />

        <service
            android:name="kingsley.www.runsong.service.PlayService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="kingsley.www.runsong.activity.PlayMusicActivity" />
        <activity android:name="kingsley.www.runsong.activity.OnlineMusicActivity" />
    </application>

</manifest>