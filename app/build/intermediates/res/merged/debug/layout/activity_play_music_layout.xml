<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kingsley.www.runsong.activity.PlayActivity">
    <ImageView
        android:id="@+id/play_music_songBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />
    <kingsley.www.runsong.view.BlurringView
        android:id="@+id/playMusicBlurringView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurRadius="11"
        app:downSampleFactor="6"
        app:overlayColor="#50FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/play_music_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#a3a3a3a3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/play_music_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/back"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/play_music_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#D81E06"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Title"/>
                <ImageView
                    android:id="@+id/play_music_iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/more"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:id="@+id/play_music_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:layout_weight="1">
            <kingsley.www.runsong.view.DiskCoverView
                android:id="@+id/play_music_DiskCoverView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <kingsley.www.runsong.view.lrcView.LrcView
                android:id="@+id/play_music_LrcView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>
        <LinearLayout
            android:background="#A3a3a3a3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/play_music_tv_currentPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="00:00"/>
                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/playMusicSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/play_music_tv_songDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="00:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/play_music_iv_playMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/loop"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/play_music_iv_lastSong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/last1"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_play_pause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/b_play"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_nextSong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/next1"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_moreList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/more_list"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
