<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="kingsley.www.runsong.fragment.MusicLocalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/localMusic_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/localMusic_Ll_playBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#A3a3a3a3"
            android:layout_height="?attr/actionBarSize">
            <kingsley.www.runsong.view.CircleImageView
                android:id="@+id/localMusic_Iv_songImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:src="@mipmap/music"
                android:layout_marginEnd="8dp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/localMusic_Tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/localMusic_Tv_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/app_name"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/localMusic_Iv_play"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:scaleType="center"
                android:src="@mipmap/play"
                tools:ignore="ContentDescription" />
            <ImageView
                android:id="@+id/localMusic_Iv_moreList"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:scaleType="center"
                android:src="@mipmap/more_list"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/localMusic_tv_isEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:text="本地中没有歌曲.."/>

</FrameLayout>
