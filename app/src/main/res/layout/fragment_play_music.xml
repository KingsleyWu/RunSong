<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kingsley.www.runsong.fragment.PlayMusicFragment">
    <ImageView
        android:id="@+id/play_music_songBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/play_music_default_bg"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/play_music_ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/play_music_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#a3a3a3a3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/play_music_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/back"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/play_music_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Title"/>
                <ImageView
                    android:id="@+id/play_music_iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/more"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <android.support.v4.view.ViewPager
            android:id="@+id/play_music_ViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:background="#77333333"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/play_music_tv_currentPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="#FFFFFF"
                    android:text="00:00"/>
                <android.support.v7.widget.AppCompatSeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/play_music_tv_songDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="#FFFFFF"
                    android:text="00:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/play_music_iv_playMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/loop"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/play_music_iv_lastSong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/last1"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_play_pause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/b_play"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_nextSong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/next1"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_moreList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/more_list"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <android.support.v4.widget.Space
                    android:layout_width="35dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/play_music_iv_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/before_collect"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/download"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/share"
                    tools:ignore="ContentDescription"/>
                <ImageView
                    android:id="@+id/play_music_iv_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/msg"
                    tools:ignore="ContentDescription" />
                <android.support.v4.widget.Space
                    android:layout_width="35dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
